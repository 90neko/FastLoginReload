<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 

<mapper namespace="com.ksptooi.flr.mapper.player.PlayerMapper">




	<select id="getPlayerById" resultType="com.ksptooi.flr.entity.player.FLRPlayer">
		SELECT * FROM PLAYER WHERE PID = #{id}
	</select>

    <select id="getPlayerByName" resultType="com.ksptooi.flr.entity.player.FLRPlayer">
		SELECT * FROM PLAYER WHERE ACCOUNT = #{account}
	</select>

	<!--使用主键回填-->
	<insert id="insertPlayer" useGeneratedKeys="true" keyProperty="pid" keyColumn="pid">
		INSERT INTO PLAYER(
		     ACCOUNT
		    ,PASSWORD
		    ,REGISTERSTATUS
		    ,REGISTERDATE
		    ,REGISTERIP
		    ,LOGINSTATUS
		    ,LOGINCOUNT
		    ,LASTLOGINDATE
		    ,LEAVEDATE)
		    VALUES(
		    #{account}
		    ,#{password}
		    ,#{registerStatus}
		    ,#{registerDate}
		    ,#{registerIp}
		    ,#{loginStatus}
		    ,#{loginCount}
		    ,#{lastLoginDate}
		    ,#{leaveDate})
	</insert>

	<delete id="removePlayer">
		DELETE FROM PLAYER WHERE PID = #{id}
	</delete>


	<update id="updatePlayer">
		UPDATE PLAYER SET
			 ACCOUNT = #{account}
			,PASSWORD = #{password}
			,REGISTERSTATUS = #{registerStatus}
			,REGISTERDATE = #{registerDate}
			,REGISTERIP = #{registerIp}
			,LOGINSTATUS = #{loginStatus}
			,LOGINCOUNT = #{loginCount}
			,LASTLOGINDATE = #{lastLoginDate}
			,LEAVEDATE = #{leaveDate}
		WHERE PID = #{pid}
	</update>

</mapper>
